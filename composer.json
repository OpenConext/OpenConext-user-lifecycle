{
    "name": "openconext/user-lifecycle",
    "description": "OpenConext user deprovisioning tool",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-fixtures-bundle": "^3.5",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.1",
        "guzzlehttp/guzzle": "^7.0",
        "incenteev/composer-parameter-handler": "^2.2",
        "openconext/monitor-bundle": "^4.2",
        "symfony/console": "7.0.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.0.*",
        "symfony/monolog-bundle": "*",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/runtime": "7.0.*",
        "symfony/security-bundle": "7.0.*",
        "symfony/yaml": "7.0.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenConext\\": "src/OpenConext"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenConext\\": "src/OpenConext",
            "OpenConext\\UserLifecycle\\Tests\\Integration\\": "tests/integration",
            "OpenConext\\UserLifecycle\\Tests\\Unit\\": "tests/unit"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "check": [
            "@phplint",
            "@phpmd",
            "@phpcs",
            "@create-db",
            "@license-headers",
            "@phpstan",
            "@test"
        ],
        "phplint": "./ci/qa/phplint",
        "license-headers": "./ci/qa/docheader",
        "phpmd": "./ci/qa/phpmd",
        "phpcs": "./ci/qa/phpcs",
        "create-db": "./ci/qa/create-test-db",
        "phpstan": "./ci/qa/phpstan",
        "phpcbf": "./ci/qa/phpcbf",
        "test": "APP_ENV=test ./ci/qa/phpunit"
    },

    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        },
        "incenteev-parameters": {
            "file": "config/openconext/parameters.yaml"
        }
    },
    "require-dev": {
        "malukenho/docheader": "^1.1",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "mockery/mockery": "^1.6",
        "overtrue/phplint": "^9.1",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "9.6",
        "rector/rector": "^1.0",
        "slevomat/coding-standard": "^8.15",
        "squizlabs/php_codesniffer": "^3.9"
    }
}
